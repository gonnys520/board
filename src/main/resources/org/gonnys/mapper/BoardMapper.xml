<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org.dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gonnys.mapper.BoardMapper">
	<!-- SQL:search -->
	<sql id="searchSQL">
		<if test="types != null">
			<foreach item="item" collection="types" open="AND ("
				close=")" separator="OR">

				<if test="item == 't'.toString()">
					title like concat('%', #{keyword}, '%')
				</if>
				<if test="item == 'c'.toString()">
					content like concat('%', #{keyword}, '%')
				</if>
				<if test="item == 'w'.toString()">
					writer like concat('%', #{keyword}, '%')
				</if>

			</foreach>
		</if>
	</sql>


	<!-- Get List -->
	<select id="getList" resultType="org.gonnys.domain.BoardVO">

		select * from tbl_board
		where 1= 1
		<include refid="searchSQL"></include>
		and bno > (select max(bno) - 100000 from tbl_board)
		order by bno desc
		limit #{skip}, #{display}

	</select>


	<!-- Get Write -->
	<insert id="write">

		<!-- <selectKey keyProperty="mno" order="BEFORE" resultType="int"> select 
			tbl_member.mno, tbl_member.id from tbl_member, tbl_board where tbl_member.mno 
			= tbl_board.mno </selectKey> -->

		insert into tbl_board (title, content, writer)
		values(#{title},
		#{content}, #{writer});

	</insert>


	<!-- Get Read -->
	<select id="read" resultType="org.gonnys.domain.BoardVO">

		select * from
		tbl_board
		where bno = #{bno}

	</select>


	<!-- Remove -->
	<update id="remove">

		update tbl_board
		set del = 'O'
		where bno = #{bno}

	</update>


	<!-- Modify -->
	<update id="modify">

		update tbl_board
		set title = #{title}, content = #{content}
		where bno = #{bno}

	</update>

	<!-- Count -->
	<select id="count" resultType="int">
		select count(*) from tbl_board
		where 1 = 1
		<include refid="searchSQL"></include>
		and bno > (select max(bno) - 100000 from tbl_board)
	</select>

</mapper>